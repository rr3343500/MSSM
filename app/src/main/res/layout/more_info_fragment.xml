<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="20dp"
    tools:context=".ui.specification.moreinfo.MoreInfoFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <com.google.android.material.textview.MaterialTextView
            android:layout_width="150dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="wrap_content"
            android:text="Generic Name "
            android:id="@+id/title_generic"
            android:fontFamily="@font/lato_regular"
            android:textColor="@color/gray_text"
            tools:ignore="MissingClass,MissingConstraints" />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="150dp"
            app:layout_constraintTop_toBottomOf="@id/title_generic"
            android:layout_height="wrap_content"
            android:text="Country of Origin "
            android:layout_marginTop="20dp"
            android:fontFamily="@font/lato_regular"
            android:textColor="@color/gray_text"
            android:id="@+id/title_origin"
            tools:ignore="MissingClass,MissingConstraints" />


        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            app:layout_constraintTop_toTopOf="@id/title_generic"
            app:layout_constraintBottom_toBottomOf="@id/title_generic"
            app:layout_constraintLeft_toRightOf="@id/title_generic"
            android:layout_height="wrap_content"
            android:text="Loading ... "
            android:fontFamily="@font/lato_regular"
            android:textColor="@color/black"
            android:id="@+id/generic_name"
            tools:ignore="MissingClass,MissingConstraints" />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            app:layout_constraintTop_toTopOf="@id/title_origin"
            app:layout_constraintBottom_toBottomOf="@id/title_origin"
            app:layout_constraintLeft_toRightOf="@id/title_origin"
            android:layout_height="wrap_content"
            android:text="Loading ..."
            android:fontFamily="@font/lato_regular"
            android:textColor="@color/black"
            android:id="@+id/origin_name"
            tools:ignore="MissingClass,MissingConstraints" />


        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/title_origin"
            android:layout_height="wrap_content"
            android:text="Manufacturer's Detail"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/lato_semi_bold"
            android:textColor="@color/black"
            android:id="@+id/title_manufac"
            tools:ignore="MissingClass,MissingConstraints" />


        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/title_manufac"
            android:layout_height="wrap_content"
            android:text="Manufacturer's Detail"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/lato_regular"
            android:textColor="@color/black"
            android:id="@+id/manufac_name"
            tools:ignore="MissingClass,MissingConstraints" />





    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>