<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="0dp"
    android:elevation="5dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="2dp"
    app:cardElevation="8dp"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:paddingTop="10dp"
        android:id="@+id/view"
        android:layout_height="wrap_content">


        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="15dp"
            android:id="@+id/image"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:layout_width="250dp"
            android:text="Loading..."
            android:fontFamily="@font/lato_regular"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:paddingLeft="10dp"
            android:id="@+id/name"
            android:maxLines="1"
            app:layout_constraintTop_toTopOf="parent"
            android:maxLength="40"
            android:ellipsize="end"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints" />


        <TextView
            android:layout_width="wrap_content"
            android:text="Color"
            android:fontFamily="@font/lato_regular"
            android:textColor="@color/gray_text"
            android:textSize="12dp"
            android:layout_marginTop="5dp"
            android:id="@+id/color_title"
            android:paddingLeft="10dp"
            app:layout_constraintTop_toBottomOf="@id/name"
            android:maxLength="40"
            android:ellipsize="end"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints" />

        <TextView
            android:layout_width="20dp"
            android:text=""
            android:fontFamily="@font/lato_regular"
            android:textColor="@color/gray_text"
            android:textSize="12dp"
            android:layout_marginTop="5dp"
            android:id="@+id/color_name"
            app:layout_constraintLeft_toRightOf="@id/color_title"
            app:layout_constraintTop_toBottomOf="@id/name"
            android:maxLength="40"
            android:layout_marginLeft="10dp"
            android:ellipsize="end"
            android:layout_height="20dp"
            tools:ignore="MissingConstraints" />



        <TextView
            android:layout_width="wrap_content"
            android:text="Size"
            android:fontFamily="@font/lato_regular"
            android:textColor="@color/gray_text"
            android:textSize="12dp"
            android:layout_marginTop="5dp"
            android:paddingLeft="10dp"
            android:id="@+id/size_title"
            app:layout_constraintTop_toBottomOf="@id/color_title"
            android:maxLength="40"
            android:ellipsize="end"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints" />

        <TextView
            android:layout_width="wrap_content"
            android:text="Loading..."
            android:fontFamily="@font/lato_regular"
            android:textColor="@color/gray_text"
            android:textSize="12dp"
            android:layout_marginTop="5dp"
            android:id="@+id/size_name"
            app:layout_constraintLeft_toRightOf="@id/size_title"
            app:layout_constraintTop_toBottomOf="@id/color_title"
            android:maxLength="40"
            android:layout_marginLeft="10dp"
            android:ellipsize="end"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints" />



        <TextView
            android:layout_width="wrap_content"
            android:text="Loading..."
            android:fontFamily="@font/lato_semi_bold"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:id="@+id/price"
            android:paddingLeft="10dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/size_title"
            android:maxLength="40"
            android:ellipsize="end"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints" />


        <TextView
            android:layout_width="wrap_content"
            android:text="Loading..."
            android:fontFamily="@font/lato_semi_bold"
            android:textColor="@color/gray_text"
            android:textSize="15dp"
            android:id="@+id/actualprice"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            app:layout_constraintLeft_toRightOf="@id/price"
            app:layout_constraintTop_toBottomOf="@id/size_title"
            android:maxLength="40"
            android:ellipsize="end"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints" />

        <TextView
            android:layout_width="wrap_content"
            android:text="Loading..."
            android:fontFamily="@font/lato_semi_bold"
            android:textColor="@color/teal_200"
            android:textSize="15dp"
            android:id="@+id/off"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            app:layout_constraintLeft_toRightOf="@id/actualprice"
            app:layout_constraintTop_toBottomOf="@id/size_title"
            android:maxLength="40"
            android:ellipsize="end"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingRight="10dp"
            android:paddingBottom="5dp"
            android:text="Qty:5"
            android:id="@+id/qty"
            android:textColor="@color/black"
            android:background="@drawable/border_button"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="15dp"
            android:drawableRight="@drawable/ic_bottom_arrow_black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/image" />




        <LinearLayout
            android:layout_width="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:weightSum="2"
            android:layout_marginTop="8dp"
            android:visibility="visible"
            android:id="@+id/item_action"
            app:layout_constraintTop_toBottomOf="@id/qty"
            android:background="@drawable/border_button"
            android:layout_height="50dp">

            <TextView
                android:layout_width="match_parent"
                android:text="Save For Later"
                android:gravity="center"
                android:textSize="15dp"
                android:layout_weight="1"
                android:fontFamily="@font/lato_regular"
                android:textColor="@color/cardview_dark_background"
                android:layout_height="match_parent"/>

            <View
                android:layout_width="0.5dp"
                android:background="@color/gray_text"
                android:layout_height="match_parent"/>

            <TextView
                android:layout_width="match_parent"
                android:text="Remove"
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/remove"
                android:textSize="15dp"
                android:fontFamily="@font/lato_regular"
                android:textColor="@color/cardview_dark_background"
                android:layout_height="match_parent"/>


        </LinearLayout>





    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>