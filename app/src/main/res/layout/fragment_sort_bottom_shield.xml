<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".bottonshield.SortBottomShield">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:textSize="14dp"
        android:id="@+id/title_sort"
        android:fontFamily="@font/lato_regular"
        android:textColor="@color/black"
        android:text="SORT BY" />


    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:id="@+id/v1"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/title_sort"
        android:background="@color/gray_text"/>


    <TextView
        android:layout_width="wrap_content"
        android:text="Price -- Low to High"
        android:id="@+id/h_t_l"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/v1"
        android:fontFamily="@font/lato_semi_bold"
        android:textColor="@color/black"
        android:layout_height="wrap_content"/>

    <com.google.android.material.radiobutton.MaterialRadioButton
        android:layout_width="wrap_content"
        android:id="@+id/radio_h_t_l"
        android:layout_marginRight="0dp"
        android:button="@drawable/custom_radio_button"
        app:layout_constraintTop_toTopOf="@id/h_t_l"
        app:layout_constraintBottom_toBottomOf="@id/h_t_l"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="wrap_content"/>



    <TextView
        android:layout_width="wrap_content"
        android:text="Price -- High to Low"
        android:id="@+id/l_t_h"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/h_t_l"
        android:fontFamily="@font/lato_semi_bold"
        android:textColor="@color/black"
        android:layout_height="wrap_content"/>

    <com.google.android.material.radiobutton.MaterialRadioButton
        android:layout_width="wrap_content"
        android:id="@+id/radio_l_t_h"
        android:layout_marginRight="0dp"
        android:button="@drawable/custom_radio_button"
        style="@style/Widget.AppCompat.CompoundButton.RadioButton"
        app:layout_constraintTop_toTopOf="@id/l_t_h"
        app:layout_constraintBottom_toBottomOf="@id/l_t_h"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="wrap_content"/>





</androidx.constraintlayout.widget.ConstraintLayout>